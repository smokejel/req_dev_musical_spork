# Anthropic API Key for Claude
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_api_key_here

# OpenAI API Key (for GPT-4o fallback)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_key_here

# Google API Key for Gemini (Primary Extract model - Phase 4.1)
# Get your key from: https://aistudio.google.com/app/apikey
# Required for large document processing (2M token context window)
GOOGLE_API_KEY=your_google_key_here

# LangSmith Tracing (Phase 5.1 - Enhanced Observability)
# Enable for precise token tracking, cost analysis, and debugging
# Get your key from: https://smith.langchain.com/
# HIGHLY RECOMMENDED for production use
LANGCHAIN_TRACING_V2=false
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com
LANGCHAIN_API_KEY=your_langsmith_key_here
LANGCHAIN_PROJECT=requirements-decomposition

# Cost Tracking & Budget Management (Phase 5.1)
# Set to 'true' to enable cost warnings when approaching budget
COST_TRACKING_ENABLED=true
COST_BUDGET_WARNING_THRESHOLD=1.00  # Warn when approaching $1.00 per run
COST_BUDGET_MAX=5.00  # Stop execution if cost exceeds $5.00
