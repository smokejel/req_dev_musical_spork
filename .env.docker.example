# .env.docker.example
# Docker Environment Configuration Template
# Copy this to .env and fill in your API keys

# ============================================================================
# LLM Provider API Keys (REQUIRED)
# ============================================================================

# Anthropic (Claude) - Required for Analyze node
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-...

# OpenAI (GPT-5 Nano) - Required for Decompose node
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-...

# Google (Gemini 2.5) - Required for Extract and Validate nodes
# Get your key at: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=...

# Tavily (Web Search) - Optional, not used in current implementation
TAVILY_API_KEY=tvly-...

# ============================================================================
# LangSmith Tracing & Observability (OPTIONAL)
# ============================================================================

# Enable LangSmith tracing for precise cost tracking and debugging
# Get your key at: https://smith.langchain.com/
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=lsv2_pt_...
LANGCHAIN_PROJECT=requirements-decomposition

# Disable tracing (use heuristic cost estimates instead)
# LANGCHAIN_TRACING_V2=false

# ============================================================================
# Application Settings (OPTIONAL)
# ============================================================================

# Quality gate threshold (0.0-1.0, default: 0.80)
# QUALITY_THRESHOLD=0.80

# Maximum refinement iterations (default: 3)
# MAX_ITERATIONS=3

# LLM temperature for deterministic outputs (default: 0.0)
# TEMPERATURE=0.0

# Budget limits for cost tracking (Phase 5)
# BUDGET_WARNING_THRESHOLD=1.00
# BUDGET_MAX=5.00

# ============================================================================
# Docker-Specific Settings
# ============================================================================

# Volume mount paths (automatically handled by docker-compose.yml)
# These are defined in docker-compose.yml and don't need to be set here
# - /app/examples (input specifications)
# - /app/outputs (generated documents)
# - /app/checkpoints (workflow state)
# - /app/data (cost & quality tracking databases)

# ============================================================================
# Development Settings (docker-compose.override.yml)
# ============================================================================

# Enable debug logging (development only)
# DEBUG=true
